{
  "name": "server",
  "version": "1.0.0",
  "main": "server/server.js",
  "type": "commonjs",
  "license": "MIT",
  "scripts": {
    "start": "node .",
    "server": "yarn lint && node .",
    "server:dev": "NODE_ENV=development && yarn lint && node .",
    "serve": "npx serve static",
    "build": "npm-run-all clean lint tsc copy-assets",
    "dev": "PORT=5000 API_MAX=25 NODE_ENV=development nodemon --watch src -e ts --exec npm run dev:start",
    "dev:dev": "ts-node-dev --no-notify --respawn --transpile-only src/index",
    "dev:start": "npm-run-all build start",
    "dev:ts": "npx ts-node src/server.ts",
    "dev:prisma": "npx ts-node src/prisma-examples/index.ts",
    "dev:server": "npm-run-all build server",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "clean": "rimraf server/*",
    "clean:dist": "rm -rf dist",
    "copy-assets": "npx shelljs tools/copyAssets.ts",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "graphql": "npm-run-all graphql",
    "graphql:start": "ts-node src/graphql/index.ts",
    "prisma": "npm-run-all prisma",
    "prisma:init": "prisma init",
    "prisma:format": "prisma format",
    "prisma:pull": "prisma db pull",
    "prisma:push": "prisma db push",
    "prisma:mongodb": "prisma init --datasource-provider mongodb",
    "prisma:generate": "prisma generate",
    "prisma:validate": "prisma validate",
    "studio": "prisma studio",
    "test": "jest",
    "test:lint": "yarn eslint .",
    "test:watch": "jest --watch",
    "script:create-user": "ts-node src/prisma-examples/1-create-user.ts",
    "script:find-user": "ts-node src/prisma-examples/2-find-user.ts",
    "script:update-user": "ts-node src/prisma-examples/3-update-user.ts",
    "script:delete-user": "ts-node src/prisma-examples/4-delete-user.ts",
    "script:create-user-post": "ts-node src/prisma-examples/5-create-user-post.ts",
    "script:find-posts": "ts-node src/prisma-examples/6-find-posts.ts"
  },
  "keywords": [
    "mattix",
    "mattixes.com"
  ],
  "author": "Austin Mattix",
  "description": "Mattix Server",
  "engines": {
    "node": "<=18.x"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@apollo/server": "^4.2.2",
    "@graphql-tools/schema": "9.0.10",
    "@prisma/client": "^4.7.1",
    "@types/graphql-fields": "1.3.4",
    "apollo-server": "3.11.1",
    "apollo-server-core": "3.11.1",
    "apollo-server-express": "3.11.1",
    "bcryptjs": "^2.4.3",
    "class-validator": "0.13.2",
    "cli-color": "^2.0.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "figlet": "^1.5.2",
    "gradient-string": "^2.0.2",
    "graphql": "^16.6.0",
    "graphql-fields": "2.0.3",
    "graphql-middleware": "6.1.33",
    "graphql-scalars": "1.20.1",
    "graphql-shield": "7.6.5",
    "graphql-subscriptions": "2.0.0",
    "graphql-type-json": "0.3.2",
    "graphql-ws": "5.11.2",
    "jest-config": "29.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.6.5",
    "multer": "^1.4.5-lts.1",
    "nexus": "1.3.0",
    "node-2fa": "^2.0.3",
    "nodemailer": "^6.8.0",
    "prisma": "^4.7.1",
    "reflect-metadata": "0.1.13",
    "type-graphql": "1.1.1",
    "uuid": "^9.0.0",
    "ws": "8.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cli-color": "^2.0.2",
    "@types/colors": "^1.2.1",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.14",
    "@types/express-graphql": "^0.9.0",
    "@types/figlet": "^1.5.5",
    "@types/gradient-string": "^1.1.2",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^29.2.4",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.13",
    "@types/nodemailer": "^6.4.6",
    "@types/shelljs": "^0.8.11",
    "@types/supertest": "2.0.12",
    "@types/uuid": "^8.3.4",
    "@types/ws": "8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "fs-extra": "^10.1.0",
    "jest": "^29.3.1",
    "jest-environment-node": "29.3.1",
    "nanoid": "4.0.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "randomstring": "1.2.3",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "supertest": "6.3.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "2.0.0",
    "typegraphql-prisma": "0.23.1",
    "typescript": "^4.9.4",
    "yarn": "^1.22.19"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
